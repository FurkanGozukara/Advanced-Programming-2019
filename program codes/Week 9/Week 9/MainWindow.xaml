        <Button Name="btnAddRecord" Content="add record" HorizontalAlignment="Left" Margin="416,46,0,0" VerticalAlignment="Top" Width="105" Click="btnAddRecord_Click"/>
        <ListBox Name="lstRecords" HorizontalAlignment="Left" Height="195" Margin="37,91,0,0" VerticalAlignment="Top" Width="349"/>
